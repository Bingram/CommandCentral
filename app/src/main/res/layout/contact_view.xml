<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/contactName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/contactDesc"
        android:layout_below="@+id/contactName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visit Website"
        android:id="@+id/webButton"
        android:layout_below="@+id/contactDesc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:autoLink="web"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Phone"
        android:id="@+id/phoneButton"
        android:layout_alignTop="@+id/webButton"
        android:layout_toLeftOf="@+id/webButton"
        android:layout_toStartOf="@+id/webButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Email"
        android:id="@+id/emailButton"
        android:layout_alignTop="@+id/webButton"
        android:layout_toRightOf="@+id/webButton"
        android:layout_toEndOf="@+id/webButton"
        android:autoLink="email"/>

</RelativeLayout>